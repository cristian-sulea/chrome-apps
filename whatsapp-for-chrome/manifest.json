{
    "manifest_version": 2,
    
    "name":        "WhatsApp™ for Chrome™",
    "description": "Quickly send and receive WhatsApp messages right from your computer.",
    
    "version": "1.0",
    
    "icons": {
         "16": "images/icon-016.png",
         "32": "images/icon-032.png",
         "48": "images/icon-048.png",
         "64": "images/icon-064.png",
        "128": "images/icon-128.png"
    },
    
    "app": {
        "background": {
            "scripts": ["js/background.js"]
        }
    },
    
    "permissions": ["webview"]
}